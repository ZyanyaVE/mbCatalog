<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.mbcatalog.searchBooksActivity"
    android:orientation="vertical"
    android:background="@drawable/wallpaper2222"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_linearlayout_bg"
        android:padding="8dp"
        >

        <SearchView
            android:id="@+id/searchBookSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/style_edittext_top_bg"/>

        <EditText
            android:id="@+id/tituloTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:paddingLeft="10dp"
            android:hint="titulo"
            android:textColorHint="#cccccc"
            android:background="@drawable/style_edittext_top_bg"
            />

        <EditText
            android:id="@+id/autorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="40sp"
            android:hint="autor"
            android:textColorHint="#cccccc"
            android:background="@drawable/style_edittext_top_bg"/>

    </LinearLayout>
    <RatingBar
        android:id="@+id/calificacionRB"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/style_ratingbar"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/addBT"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shapeadd"
        android:textSize="30sp"
        android:text="+"
        android:onClick="onClickAdd"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
