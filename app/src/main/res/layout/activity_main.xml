<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/wallpaper2222">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        
        android:src="@drawable/titulo_pmdb4_grande"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/peliculasBT"
        android:text="Peliculas"
        android:textColor="#573131"
        android:textSize="30sp"
        android:onClick="onClickPeliculas"

        android:layout_width="200dp"
        android:layout_height="60dp"

        android:background="@drawable/button_shapesolid"
        android:shadowColor="#A8A8A8"
        android:shadowDx="-1"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="80dp"
        android:layout_gravity = "center_horizontal"
        />

    <Button
        android:id="@+id/librosBT"
        android:text="Libros"
        android:textColor="#573131"
        android:textSize="30sp"
        android:onClick="onClickLibros"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"

        android:background="@drawable/button_shapesolid"
        android:shadowColor="#A8A8A8"
        android:shadowDx="-1"
        android:shadowDy="0"
        android:shadowRadius="5"
       />

</LinearLayout>
